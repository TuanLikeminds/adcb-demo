#!/usr/bin/env sh
# Directory containing the files
DIRECTORY="/run/secrets/"
echo "Converting env files to .env files!"
# Loop through each file that starts with "env"
for file in "$DIRECTORY"/env*; do
  # Check if it's a file
  if [[ -f "$file" ]]; then
    # Get the base name of the file without the path
    base_name=$(basename "$file")
    # Append .env to the file name
    mv "$file" "$DIRECTORY/$base_name.env"
  fi
done

echo "Renamed files completed."